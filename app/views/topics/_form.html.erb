<%= form_with(model: topic, local: true) do |form| %>
  <% if topic.errors.any? %>
    <div class="alert">
      <%= pluralize(topic.errors.count, "erreur") %> ont empêché ce sujet d'être sauvegardé :

      <ul>
      <% topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :topic_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :topic_description, rows: 10 %>
  </div>

  <div class="actions">
    <%= form.submit class: 'right button' %>
  </div>
<% end %>
