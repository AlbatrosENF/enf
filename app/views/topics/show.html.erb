<% banner title: @topic.title,
          description: simple_format(@topic.description) %>

<h3>Commentaires</h3>

<div class="comments">
  <% @comments.each do |comment| %>
    <div class="activity">
      <div class="bubble">
        <%= octicon("comment") %>
      </div>
      <p><strong><%= comment.user.full_name %></strong> &mdash; Il y a <%= time_ago_in_words comment.created_at %></p>
    </div>

    <div class="comment">
      <%= simple_format(comment.body) %>
    </div>
  <% end %>
</div>

<h3>Ajouter un commentaire</h3>

<%= form_for([@topic, @topic.comments.build]) do |f| %>
  <div class="field">
    <%= f.text_area :body, placeholder: 'Votre commentaire ...', cols: 50, rows: 10 %>
  </div>

  <div class="clearer"></div>

  <div class="actions">
    <%= f.submit "Ajouter un commentaire", class: 'button' %>
  </div>
<% end %>
